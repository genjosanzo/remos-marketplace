<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <!-- the application context definition for the springapp DispatcherServlet -->

  <bean name="/content.htm" class="org.remus.marketplace.controller.ContentController">
  	<property name="serverPrefix" value="${server.prefix}"></property>
  	 <property name="nodeDao" ref="nodeBean" />
  	 <property name="clickthroughDao" ref="clickthroughBean"></property>
  </bean>
  <bean name="/index.htm" class="org.remus.marketplace.controller.IndexController">
  	<property name="serverPrefix" value="${server.prefix}"></property>
  	 <property name="nodeDao" ref="nodeBean" />
  </bean>
  <bean name="/search.htm" class="org.remus.marketplace.controller.SearchController">
  	<property name="serverPrefix" value="${server.prefix}"></property>
  	 <property name="nodeDao" ref="nodeBean" />
  	 <property name="indexService" ref="indexService"></property>
  </bean>
  
   <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"></property>
        <property name="prefix" value="/WEB-INF/jsp/"></property>
        <property name="suffix" value=".jsp"></property>        
    </bean>
   <bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="classpath:application.properties" />
	</bean>

</beans>